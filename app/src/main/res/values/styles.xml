<resources>

    <style name="AppTheme" parent="Base.AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Base application theme. -->
    <style name="Base.AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimaryInverse">@color/textColorInverse</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.TextAppearance.Headline" parent="TextAppearance.AppCompat.Headline"/>
    <style name="AppTheme.TextAppearance.Headline.Inverse" parent="TextAppearance.AppCompat.Headline">
        <item name="android:textColor">@color/textColorInverse</item>
    </style>

    <style name="AppTheme.TextAppearance.Large" parent="TextAppearance.AppCompat.Large"/>
    <style name="AppTheme.TextAppearance.Large.Inverse" parent="TextAppearance.AppCompat.Large.Inverse"/>

    <style name="AppTheme.TextAppearance.Small" parent="TextAppearance.AppCompat.Small"/>
    <style name="AppTheme.TextAppearance.Small.Inverse" parent="TextAppearance.AppCompat.Small.Inverse"/>

    <style name="AppTheme.TextAppearance.Medium" parent="TextAppearance.AppCompat.Medium"/>
    <style name="AppTheme.TextAppearance.Medium.Inverse" parent="TextAppearance.AppCompat.Medium.Inverse"/>

</resources>
